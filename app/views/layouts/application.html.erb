<!DOCTYPE html>
<html>
<head>
  <title>Adventure</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= yield :head %>

    <link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
  </head>
  <body>
    <header class="header">
      <%= render "shared/menu" %>
    </header>

    <% if content_for?(:secondary_header) %>
    <header class="sec-header">
      <div class="sec-header-wrapper group">
        <%= yield :secondary_header %>
      </div>
    </header>
    <% end %>

    <content>
      <% if flash[:errors] || flash[:success] %>
        <div class="flash sig-message">
          <%= flash[:errors] if flash[:errors] %>
          <%= flash[:success] if flash[:success] %>
        </div>
      <% end %>


      <div class="content-wrap group">
        <%= yield %>
      </div>
    </content>
  </body>
</html>