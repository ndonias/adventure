<% if current_user %>
	<p>Hello <%=current_user.username %> | 
		<%= link_to 'sign out', logout_path, method: :delete %>
	</p>
<% else %>
	<%= form_tag(signin_path, method: :post) do %>
		<%= label_tag :email %>
		<%= email_field_tag :email %>
		<%= label_tag :password %>
		<%= password_field_tag :password %>
		<%= submit_tag "login" %>
	<% end %>
<% end %>